<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android_custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/template_thumb"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="#4bffffff"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@null"/>

    <ImageView
        android:id="@+id/template_not_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_puzzle_template_not_local"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/template_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5.0dip"
        android:layout_marginEnd="5.0dip"
        android:layout_marginRight="5.0dip"
        android:contentDescription="@null"
        android:src="@drawable/ic_puzzle_template_download"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/template_download_mask_layer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="#b4000000"
        android:contentDescription="@null"/>

    <com.dw.bcamera.widget.RoundProgressBar
        android:id="@+id/template_download_progress"
        android:layout_width="55.0dip"
        android:layout_height="55.0dip"
        android:layout_centerInParent="true"
        android_custom:roundColor="#00000000"
        android_custom:roundProgressColor="#ffffc627"
        android_custom:roundWidth="2.0dip"
        android_custom:textColor="#ffffc627"
        android_custom:textSize="15.0sp"/>
</RelativeLayout>