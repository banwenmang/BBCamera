<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="30.0dip"
                android:paddingRight="30.0dip">

    <RelativeLayout
        android:id="@+id/onekey_beauty_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_right">

        <ImageView
            android:id="@+id/onekey_img_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:src="@drawable/onekey_beauty_center"/>

        <ImageView
            android:id="@+id/onekey_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv_onekey_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onekey_img"
            android:layout_centerHorizontal="true"
            android:text="@string/str_one_key_beauty"
            android:textColor="@color/textcolor_hor_list_item"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/divide_iv"
        android:layout_width="@dimen/beauty_divider_width"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_toRightOf="@+id/onekey_beauty_layout"
        android:contentDescription="@null"
        android:src="@color/beauty_divider_color"/>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/divide_iv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/whitening_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/tv_drawable_meibai"
            android:gravity="center"
            android:text="@string/str_whitening"
            android:textColor="@color/textcolor_hor_list_item"/>

        <TextView
            android:id="@+id/smooth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/tv_drawable_smooth"
            android:gravity="center"
            android:text="@string/str_smooth"
            android:textColor="@color/textcolor_hor_list_item"/>

        <TextView
            android:id="@+id/rosy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/tv_drawable_rosy"
            android:gravity="center"
            android:text="@string/str_rosy"
            android:textColor="@color/textcolor_hor_list_item"/>

        <TextView
            android:id="@+id/jaundice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/tv_drawable_jaundice"
            android:gravity="center"
            android:text="@string/str_remove_jaundice"
            android:textColor="@color/textcolor_hor_list_item"/>
    </LinearLayout>
</RelativeLayout>